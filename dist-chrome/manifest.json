{
  "manifest_version": 3,
  "name": "single-spa Inspector v3",
  "short_name": "sspa Inspect v3",
  "version": "3.1.1",
  "author": "gzl333",
  "homepage_url": "https://github.com/gzl333/single-spa-inspector-v3",
  "description": "A devtools panel for single-spa applications (Manifest V3)",
  "action": {
    "default_icon": "./logo-white-bgblue.png",
    "default_title": "single-spa Inspector v3"
  },
  "icons": {
    "16": "./logo-white-bgblue.png",
    "48": "./logo-white-bgblue.png",
    "96": "./logo-white-bgblue.png",
    "128": "./logo-white-bgblue.png"
  },
  "devtools_page": "./build/main.html",
  "permissions": [
    "storage",
    "scripting",
    "browsingData"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["./build/contentScriptMain.js"],
      "world": "MAIN"
    },
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["./build/contentScript.js"],
      "world": "ISOLATED"
    }
  ],
  "background": {
    "service_worker": "./build/backgroundScript.js"
  }
}
